{
  "name": "plpgsql-lsp",
  "description": "A PL/pgSQL language server",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "publisher": "uniquevision",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:postgres"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "plpgsqlLanguageServer.host": {
          "scope": "resource",
          "type": "string",
          "default": "localhost",
          "description": "The default host."
        },
        "plpgsqlLanguageServer.port": {
          "scope": "resource",
          "type": "number",
          "default": 5432,
          "description": "The default port."
        },
        "plpgsqlLanguageServer.database": {
          "scope": "resource",
          "type": "string",
          "default": "postgres",
          "description": "The default database."
        },
        "plpgsqlLanguageServer.user": {
          "scope": "resource",
          "type": "string",
          "default": "postgres",
          "description": "The default user."
        },
        "plpgsqlLanguageServer.password": {
          "scope": "resource",
          "type": "string",
          "default": "postgres",
          "description": "The default password."
        },
        "plpgsqlLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "typescript": "^4.4.3"
  }
}
