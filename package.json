{
  "name": "vscode-plpgsql-lsp",
  "displayName": "PL/pgSQL Language Server",
  "description": "VSCode PL/pgSQL Language Server.",
  "license": "MIT",
  "version": "1.2.0",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/uniquevision/utilities/plpgsql-lsp"
  },
  "publisher": "uniquevision",
  "categories": [],
  "keywords": [
    "plpgsql",
    "Language Server"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:postgres"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "postgres",
        "extensions": [
          ".pgsql",
          ".psql"
        ],
        "aliases": [
          "Postgres"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "postgres",
        "scopeName": "source.pgsql",
        "path": "./syntaxes/pgsql.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "PostgreSQL connection configuration",
      "properties": {
        "plpgsqlLanguageServer.host": {
          "scope": "resource",
          "type": "string",
          "default": "localhost",
          "description": "The default host."
        },
        "plpgsqlLanguageServer.port": {
          "scope": "resource",
          "type": "number",
          "default": 5432,
          "description": "The default port."
        },
        "plpgsqlLanguageServer.database": {
          "scope": "resource",
          "type": "string",
          "default": "postgres",
          "description": "The default database."
        },
        "plpgsqlLanguageServer.user": {
          "scope": "resource",
          "type": "string",
          "default": "postgres",
          "description": "The default user."
        },
        "plpgsqlLanguageServer.password": {
          "scope": "resource",
          "type": "string",
          "default": "postgres",
          "description": "The default password."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "vsce": "^2.6.3"
  }
}
